{
  "$schema": "https://market.pluxel.dev/schema/package.json",
  "name": "pluxel-plugin-bot-suite",
  "version": "0.1.0",
  "description": "这是一个示例插件",
  "type": "module",
  "exports": {
    ".": {
      "@pluxel/hmr": "./src/index.ts",
      "default": "./dist/index.mjs"
    },
    "./core": {
      "@pluxel/hmr": "./src/bot-core.ts",
      "default": "./dist/core.mjs"
    },
    "./core/parts": {
      "@pluxel/hmr": "./src/bot-core/parts.ts",
      "default": "./dist/core/parts.mjs"
    },
    "./core/parts/rolldown": {
      "@pluxel/hmr": "./src/bot-core/parts/rolldown.ts",
      "default": "./dist/core/parts/rolldown.mjs"
    },
    "./core/parts/runtime": {
      "@pluxel/hmr": "./src/bot-core/parts/runtime.ts",
      "default": "./dist/core/parts/runtime.mjs"
    },
    "./core/web": {
      "@pluxel/hmr": "./src/bot-core/web.ts",
      "default": "./dist/core/web.mjs"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.mts",
  "files": [
    "dist",
    "!**/*.map"
  ],
  "scripts": {
    "bench:perm": "bun ./src/permissions/test/permissions.bench.ts",
    "build": "pluxel build",
    "test:core": "bun test --conditions=@pluxel/hmr src/core/commands",
    "test:perm": "bun test --conditions=@pluxel/hmr src/permissions"
  },
  "dependencies": {
    "@mikro-orm/libsql": "^6.6.6",
    "@pluxel/cmd": "workspace:*",
    "@sinclair/parsebox": "^0.11.1"
  },
  "peerDependencies": {
    "pluxel-plugin-bot-core": "workspace:*",
    "pluxel-plugin-kook": "workspace:^",
    "pluxel-plugin-kv": "workspace:^",
    "pluxel-plugin-mikro-orm": "workspace:^",
    "pluxel-plugin-telegram": "workspace:^"
  },
  "peerDependenciesMeta": {
    "pluxel-plugin-mikro-orm": {
      "optional": true
    }
  },
  "publishConfig": {
    "exports": {
      ".": "./dist/index.mjs",
      "./core": "./dist/core.mjs",
      "./core/parts": "./dist/core/parts.mjs",
      "./core/parts/rolldown": "./dist/core/parts/rolldown.mjs",
      "./core/parts/runtime": "./dist/core/parts/runtime.mjs",
      "./core/web": "./dist/core/web.mjs",
      "./package.json": "./package.json"
    }
  },
  "pluxel": {
    "dependOn": {
      "required": [],
      "optional": [
        "pluxel-plugin-bot-core",
        "pluxel-plugin-kv",
        "pluxel-plugin-mikro-orm"
      ]
    }
  }
}
