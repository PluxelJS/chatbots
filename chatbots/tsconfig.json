{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
			"~/*": ["bot-layer/*"]
		}
  },
  "include": ["core", "bot-layer", "permissions"],
  "exclude": ["**/*.test.ts", "**/*.bench.ts", "**/__tests__/**"]
}
