{
	"private": true,
	"name": "pluxel-chatbots",
	"type": "module",
	"version": "0.1.0",
	"description": "Chatbots product workspace (downstream of pluxel-template).",
	"scripts": {
		"bootstrap": "sh ../scripts/bootstrap-product.sh",
		"dev": "node --conditions=@pluxel/hmr src/host.ts",
