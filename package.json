		"@mantine/modals": "^8.3.14",
		"@repobuddy/biome": "^2.3.1",
		"@tabler/icons-react": "^3.36.1",
		"@types/bun": "^1.3.9",
		"@types/react": "^19.2.13",
		"@types/react-dom": "^19.2.3",
		"dts-resolver": "^2.1.3",
		"oxc-resolver": "^11.13.1",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"tsdown": "0.20.3",
		"turbo": "^2.8.4",
